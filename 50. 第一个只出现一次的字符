# -*- coding:utf-8 -*-
class Solution:
    def FirstNotRepeatingChar(self, s):
        dirc = {}
        for i in range(len(s)):
            if s[i] in dirc:
                dirc[s[i]] += 1
            else:
                dirc[s[i]] = 1
        for i in range(len(s)):
            if dirc[s[i]] == 1:
                return i
        return -1
