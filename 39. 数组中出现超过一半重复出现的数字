# -*- coding:utf-8 -*-
class Solution:
    def MoreThanHalfNum_Solution(self, numbers):
        res = 0
        if not numbers:
            return res
        if len(numbers)==1:
            return numbers[0]
        record = numbers[0]
        count = 1
        for i in numbers[1:]:
            if count == 0:
                record = i
                count = 1
            elif i == record:
                count += 1
            else:
                count -= 1
        if self.morethanhalf(numbers, record):
            res = record
        return res
    def morethanhalf(self, nums, num):
        if not nums:
            return False
        count = 0
        for i in nums:
            if num == i:
                count += 1
        if count *2 >len(nums):
            return True
        else:
            return False
